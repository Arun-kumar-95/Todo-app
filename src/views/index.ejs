<link rel="stylesheet" href="../css/style.css" type="text/css">
<link rel="stylesheet" href="../css/error.css" type="text/css">
<script src="../js/index.js" type="text/javascript" defer></script>
<script src="../js/Helpers.js" type="text/javascript" defer></script>



<div class="app__container">
    <div id="app">


        <div class="owner__wrapper">
            <h1>Whats up,</h1>
            <input value="" type="text" placeholder="Enter name" name="owner" autocomplete="off" required>

        </div>

        <div class="create_todo_wrapper">
            <form action="" class="todo-form" method="POST">
                <h3>CREATE A TODO</h3>

                <div class="form-group">
                    <h2>Write your todos here ?</h2>
                    <input type="text" name="todoTask" placeholder="eg wake up early" required autocomplete="off" />
                </div>

                <div class="form-group">
                    <label for="date">Date</label>
                    <input type="date" name="date" required autoComplete="off" />
                </div>


                <div class="pick__category__wrapper seperator">
                    <p>Pick a category</p>
                    <div class="pick__category__container">
                        <div class="category">
                            <button id="btnBusisness" class="btn" data-category="busisness"></button>
                            <p>Busisness</p>
                        </div>
                        <div class="category">
                            <button id="btnPersonal" class="btn" data-category="personal"></button>
                            <p>Personal</p>
                        </div>
                        <div class="category">
                            <button id="btnImportant" class="btn" data-category="important"></button>
                            <p>Important</p>
                        </div>
                        <div class="category">
                            <button id="btnOther" class="btn" data-category="other"></button>
                            <p>Other</p>
                        </div>
                    </div>
                </div>

                <button type="button" class="btnTodo">Add Todos</button>
            </form>
        </div>
        <div class="see__all__todos">
            <a href="/todos" class="">See all todos</a>
        </div>
    </div>

</div>